	<bean class="org.mybatis.spring.SqlSessionFactoryBean" id="sqlSessionFactory">
		<property name="dataSource" ref="data_source"></property>
<!-- 	<property name="mapperLocations" value="/WEB-INF/mybatis/mapper/*.xml"></property> -->
